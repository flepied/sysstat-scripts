# command arguments handling

if [ $# = 0 ]; then
    echo "usage: $0 <file> [<png file>]" 1>&2
    exit 1
fi

sarfile=$1
pngfile=$2

dir=`dirname $0`
filter="$dir/count.py 2"

# sanity checks
for c in sadf gnuplot; do
    if ! type -p $c > /dev/null; then
	echo "$c not found. Correct your path" 1>&2
	echo $PATH
	exit 1
    fi
done

common="set xlabel \"Time\"
set datafile separator \";\""

if [ -n "$pngfile" ]; then
    terminal="set terminal png
set output \"$pngfile\""
    pause=
else
    terminal=
    pause="pause mouse"
fi

# temp files creation

temp2=`mktemp`
temp3=`mktemp`

clean() {
    rm -f $temp2 $temp3
}

trap clean 0

# commons ends here
